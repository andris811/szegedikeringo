---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import { content } from '../content.js';

const lang = 'hu';
const contactContent = content[lang].contact;
---

<Layout
  title="Kapcsolat | Szegedi Keringő Tenyészet"
  description="Vegye fel a kapcsolatot a Szegedi Magasszálló Keringő tenyésztővel - kérdések, vásárlás, tanácsadás"
>
  <!-- Hero Section -->
  <Hero
    title={contactContent.title}
    subtitle={contactContent.subtitle}
  />

  <!-- Intro Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-xl text-gray-700 leading-relaxed">
        {contactContent.intro}
      </p>
    </div>
  </section>

  <!-- Contact Info & Form -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-8">
            {contactContent.info.title}
          </h2>

          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <div>
                <p class="font-medium text-gray-900">{contactContent.info.name}</p>
                <p class="text-gray-600">[Tenyésztő neve]</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <div>
                <p class="font-medium text-gray-900">{contactContent.info.phone}</p>
                <p class="text-gray-600">[Telefonszám]</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <div>
                <p class="font-medium text-gray-900">{contactContent.info.email}</p>
                <p class="text-gray-600">[Email cím]</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <p class="font-medium text-gray-900">{contactContent.info.location}</p>
                <p class="text-gray-600">{contactContent.info.locationValue}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-8">
            {contactContent.form.title}
          </h2>

          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                {contactContent.form.name}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                placeholder={contactContent.form.namePlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                required
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                {contactContent.form.email}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder={contactContent.form.emailPlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                required
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                {contactContent.form.subject}
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                placeholder={contactContent.form.subjectPlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                required
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                {contactContent.form.message}
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                placeholder={contactContent.form.messagePlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                required
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-primary-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-primary-700 transition-colors"
            >
              {contactContent.form.submit}
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Media Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        {contactContent.social.title}
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        {contactContent.social.description}
      </p>

      <div class="flex justify-center space-x-8">
        <!-- Facebook -->
        <a href="#" class="flex items-center justify-center w-12 h-12 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>

        <!-- Instagram -->
        <a href="#" class="flex items-center justify-center w-12 h-12 bg-pink-600 text-white rounded-full hover:bg-pink-700 transition-colors">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12.017 0C8.396 0 7.996.014 6.79.067 5.584.12 4.775.302 4.084.588c-.693.288-1.279.67-1.864 1.255C1.635 2.428 1.253 3.014.965 3.707c-.288.691-.47 1.5-.523 2.706C.386 7.619.372 8.019.372 11.64s.014 3.995.067 5.201c.053 1.206.235 2.015.523 2.706.288.691.67 1.277 1.255 1.862.585.585 1.171.967 1.864 1.255.691.288 1.5.47 2.706.523 1.206.053 1.606.067 5.227.067s4.021-.014 5.227-.067c1.206-.053 2.015-.235 2.706-.523.691-.288 1.277-.67 1.862-1.255.585-.585.967-1.171 1.255-1.864.288-.691.47-1.5.523-2.706.053-1.206.067-1.606.067-5.227s-.014-4.021-.067-5.227c-.053-1.206-.235-2.015-.523-2.706-.288-.691-.67-1.277-1.255-1.862C20.572 1.635 19.986 1.253 19.293.965c-.691-.288-1.5-.47-2.706-.523C16.081.386 15.681.372 12.06.372s-4.021.014-5.227.067c-1.206.053-2.015.235-2.706.523-.691.288-1.277.67-1.862 1.255C2.708 2.428 2.326 3.014 2.038 3.707c-.288.691-.47 1.5-.523 2.706C1.614 7.619 1.6 8.019 1.6 11.64s.014 3.995.067 5.201c.053 1.206.235 2.015.523 2.706.288.691.67 1.277 1.255 1.862.585.585 1.171.967 1.864 1.255.691.288 1.5.47 2.706.523 1.206.053 1.606.067 5.227.067s4.021-.014 5.227-.067c1.206-.053 2.015-.235 2.706-.523.691-.288 1.277-.67 1.862-1.255.585-.585.967-1.171 1.255-1.864.288-.691.47-1.5.523-2.706.053-1.206.067-1.606.067-5.227zM12.017 5.838c-3.403 0-6.163 2.76-6.163 6.163s2.76 6.163 6.163 6.163 6.163-2.76 6.163-6.163S15.42 5.838 12.017 5.838zm0 10.114c-2.302 0-4.166-1.864-4.166-4.166s1.864-4.166 4.166-4.166 4.166 1.864 4.166 4.166-1.864 4.166-4.166 4.166zm6.406-11.845c-.796 0-1.441.645-1.441 1.441s.645 1.441 1.441 1.441 1.441-.645 1.441-1.441-.645-1.441-1.441-1.441z"/>
          </svg>
        </a>

        <!-- Viber -->
        <a href="#" class="flex items-center justify-center w-12 h-12 bg-purple-600 text-white rounded-full hover:bg-purple-700 transition-colors">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12.018 0C5.372 0 0 4.372 0 9.747c0 2.48.927 4.77 2.465 6.57L.076 24l9.181-2.55c1.726.94 3.752 1.478 5.761 1.478 6.646 0 12.018-4.372 12.018-9.747C24.036 4.372 18.664 0 12.018 0zm5.406 13.635c-.293.146-.65.244-1.055.244-.405 0-.813-.244-1.055-.488-.244-.244-.488-.732-.488-1.316 0-.732.244-1.316.488-1.804.244-.488.65-.732 1.055-.732.293 0 .65.098 1.055.244.244.146.488.488.488.976 0 .244-.098.488-.244.732-.146.244-.244.488-.488.732zm-3.171-.488c-.244.146-.65.244-1.055.244-.405 0-.813-.244-1.055-.488-.244-.244-.488-.732-.488-1.316 0-.732.244-1.316.488-1.804.244-.488.65-.732 1.055-.732.293 0 .65.098 1.055.244.244.146.488.488.488.976 0 .244-.098.488-.244.732-.146.244-.244.488-.488.732zm-3.171-.488c-.244.146-.65.244-1.055.244-.405 0-.813-.244-1.055-.488-.244-.244-.488-.732-.488-1.316 0-.732.244-1.316.488-1.804.244-.488.65-.732 1.055-.732.293 0 .65.098 1.055.244.244.146.488.488.488.976 0 .244-.098.488-.244.732-.146.244-.244.488-.488.732z"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Form submission handling
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form');

    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();

        // For now, just show an alert
        // In production, you'd send this to a backend service
        alert('Köszönjük az üzenetet! Hamarosan felvesszük Önnel a kapcsolatot.');

        // Reset form
        form.reset();
      });
    }
  });
</script>