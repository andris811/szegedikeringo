---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import { content } from '../content.js';

const lang = 'hu';
const contactContent = content[lang].contact;
---

<Layout
  title="Kapcsolat | Szegedi Magasszálló Keringő Tenyészet"
  description="Vegye fel a kapcsolatot a Szegedi Magasszálló Keringő tenyésztővel - kérdések, tanácsadás"
>
  <!-- Hero Section -->
  <Hero
    title={contactContent.title}
    subtitle={contactContent.subtitle}
    image="/images/hero/contact.jpg"
  />

  <!-- Intro Section -->
  <section class="py-12 bg-gradient-to-b from-primary-50 to-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-xl text-gray-700 leading-relaxed">
        {contactContent.intro}
      </p>
    </div>
  </section>

  <!-- Contact Info & Form -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-8">
              {contactContent.info.title}
            </h2>

            <div class="space-y-6">
              <div class="flex items-start space-x-4 p-4 bg-primary-50 rounded-lg hover:bg-primary-100 transition-colors duration-300">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                </div>
                <div>
                  <p class="font-semibold text-gray-900 mb-1">{contactContent.info.name}</p>
                  <p class="text-gray-600">{contactContent.info.nameValue}</p>
                </div>
              </div>

              <div class="flex items-start space-x-4 p-4 bg-primary-50 rounded-lg hover:bg-primary-100 transition-colors duration-300">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-gray-900 mb-1">{contactContent.info.phone}</p>
                  <button
                    id="reveal-phone"
                    class="text-primary-600 hover:text-primary-700 font-medium flex items-center gap-2 group"
                    data-phone={contactContent.info.phoneRaw}
                    data-phone-display={contactContent.info.phoneValue}
                  >
                    <span>{contactContent.info.revealButton}</span>
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                </div>
              </div>

              <div class="flex items-start space-x-4 p-4 bg-primary-50 rounded-lg hover:bg-primary-100 transition-colors duration-300">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-gray-900 mb-1">{contactContent.info.email}</p>
                  <button
                    id="reveal-email"
                    class="text-primary-600 hover:text-primary-700 font-medium flex items-center gap-2 group"
                    data-email={contactContent.info.emailValue}
                  >
                    <span>{contactContent.info.revealButton}</span>
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                </div>
              </div>

              <div class="flex items-start space-x-4 p-4 bg-primary-50 rounded-lg hover:bg-primary-100 transition-colors duration-300">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                </div>
                <div>
                  <p class="font-semibold text-gray-900 mb-1">{contactContent.info.location}</p>
                  <p class="text-gray-600">{contactContent.info.locationValue}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media Section -->
          <div class="pt-8 border-t border-gray-200">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              {contactContent.social.title}
            </h3>
            <p class="text-gray-600 mb-6">
              {contactContent.social.description}
            </p>

            <div class="flex space-x-4">
              <!-- Facebook -->
              <a href="https://www.facebook.com/share/1BgL13xgXn/?mibextid=wwXIfr" target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center hover:bg-blue-700 hover:scale-110 transform transition-all duration-300 shadow-md hover:shadow-lg" aria-label="Facebook">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>

              <!-- Instagram -->
              <a href="https://www.instagram.com/andras.varga.104418?igsh=MWRkMHhwMHExZm9xZA==" target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-pink-600 rounded-full flex items-center justify-center hover:bg-pink-700 hover:scale-110 transform transition-all duration-300 shadow-md hover:shadow-lg" aria-label="Instagram">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>

              <!-- Viber -->
              <a href="viber://chat?number=+36303304567" class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center hover:bg-purple-700 hover:scale-110 transform transition-all duration-300 shadow-md hover:shadow-lg" aria-label="Viber">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M11.4 0C9.473.028 5.333.344 3.02 2.467 1.302 4.187.696 6.7.633 9.817.57 12.933.488 18.617 6.55 20.231h.005l-.004 2.485s-.037.99.613 1.192c.782.242 1.241-.499 1.989-1.299.408-.437.971-1.086 1.397-1.58 3.851.326 6.812-.416 7.149-.525.777-.253 5.176-.816 5.893-6.657.738-6.022-.358-9.83-2.874-11.436C18.683.887 15.408-.028 11.4 0zm.058 1.693c3.586-.028 6.564.82 8.623 2.285 2.046 1.458 2.96 4.887 2.298 10.11-.635 5.027-4.162 5.314-4.836 5.529-.286.091-2.961.758-6.395.465 0 0-2.532 3.056-3.321 3.844-.123.122-.263.167-.352.145-.13-.033-.166-.188-.165-.414l.02-4.018c-5.027-1.383-4.706-6.164-4.654-8.778.053-2.614.567-4.768 2.023-6.293 1.994-1.917 5.55-2.847 7.759-2.875zm-.189 2.294c-.208.003-.358.227-.332.498.027.27.254.472.498.449 1.627-.154 3.136.387 4.309 1.553 1.173 1.166 1.781 2.683 1.675 4.31-.016.244.178.479.435.52.256.042.498-.138.537-.398.13-1.961-.682-3.786-2.07-5.167-1.389-1.38-3.219-2.113-5.052-2.065zm-1.951.696c-.197.018-.348.162-.399.358l-.371 1.479c-.023.088-.009.179.038.253l.344.544c.214.339.184.779-.075 1.084l-1.164 1.329c-.268.306-.702.378-1.061.177l-.509-.285c-.07-.038-.15-.054-.228-.047l-1.479.147c-.195.019-.362.159-.419.349-.055.189.025.392.201.506.117.075.384.243.719.494.336.251.756.562 1.229.908.473.346.99.73 1.535 1.135.546.405 1.115.82 1.676 1.218.36.256.707.493 1.031.703.324.211.627.395.891.543.176.099.385.13.584.078.2-.052.358-.2.419-.391l.455-1.442c.021-.065.028-.133.021-.199l-.104-.602c-.074-.435.113-.871.478-1.115l1.304-.872c.365-.244.556-.692.488-1.147l-.097-.649c-.009-.062-.029-.121-.061-.175l-.755-1.288c-.1-.171-.299-.265-.499-.238-.198.027-.355.176-.394.373l-.233 1.169c-.067.337-.344.601-.684.653l-1.523.234c-.339.052-.679-.086-.885-.36l-.865-1.161c-.13-.175-.346-.261-.555-.222z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-primary-50 p-8 rounded-2xl shadow-lg">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">
            {contactContent.form.title}
          </h2>

          <form id="contact-form" action="https://formspree.io/f/xjkdrnap" method="POST" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                {contactContent.form.name}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                placeholder={contactContent.form.namePlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white transition-all duration-300"
                required
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                {contactContent.form.email}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder={contactContent.form.emailPlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white transition-all duration-300"
                required
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-semibold text-gray-700 mb-2">
                {contactContent.form.subject}
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                placeholder={contactContent.form.subjectPlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white transition-all duration-300"
                required
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                {contactContent.form.message}
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                placeholder={contactContent.form.messagePlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white resize-none transition-all duration-300"
                required
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-primary-600 text-white py-3.5 px-6 rounded-lg font-semibold hover:bg-primary-700 transform hover:scale-105 transition-all duration-300 shadow-md hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed"
            >
              {contactContent.form.submit}
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Contact reveal functionality
  document.addEventListener('DOMContentLoaded', () => {
    // Phone reveal
    const phoneBtn = document.getElementById('reveal-phone');
    if (phoneBtn) {
      phoneBtn.addEventListener('click', () => {
        const phone = phoneBtn.dataset.phone || '';
        const phoneDisplay = phoneBtn.dataset.phoneDisplay || phone;
        if (phone) {
          const link = document.createElement('a');
          link.href = `tel:${phone}`;
          link.className = 'text-gray-600 hover:text-primary-600 transition-colors';
          link.textContent = phoneDisplay;
          phoneBtn.replaceWith(link);
        }
      });
    }

    // Email reveal
    const emailBtn = document.getElementById('reveal-email');
    if (emailBtn) {
      emailBtn.addEventListener('click', () => {
        const email = emailBtn.dataset.email || '';
        if (email) {
          const link = document.createElement('a');
          link.href = `mailto:${email}`;
          link.className = 'text-gray-600 hover:text-primary-600 transition-colors';
          link.textContent = email;
          emailBtn.replaceWith(link);
        }
      });
    }
  });
</script>