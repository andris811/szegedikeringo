---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import { content } from '../../content.js';

const lang = 'sr';
const homeContent = content[lang].home;
---

<Layout
  title="Uzgoj Segedinskih Viskoleta"
  description="Kvalitetan uzgoj golubova rase Segedinski Viskoleti sa viÅ¡e od 50 godina iskustva. Tradicija, lepota i sloboda."
>
  <!-- Hero Section -->
  <Hero
    title={homeContent.hero.title}
    subtitle={homeContent.hero.subtitle}
    image="/images/hero/home.jpg"
  />

  <!-- Intro Section -->
  <section class="py-16 bg-white dark:bg-gray-800 transition-colors">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
          {homeContent.intro.title}
        </h2>
        <div class="w-24 h-1 bg-primary-600 dark:bg-gray-400 mx-auto mb-6"></div>
        <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
          {homeContent.intro.text}
        </p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900 transition-colors">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {homeContent.features.map((feature, index) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-md hover:shadow-xl dark:shadow-gray-900/50 transition-shadow border border-transparent dark:border-gray-700">
            <div class="w-12 h-12 bg-primary-100 dark:bg-gray-700 rounded-full flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {index === 0 && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                )}
                {index === 1 && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                )}
                {index === 2 && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                )}
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-3">
              {feature.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Image Section (Placeholder) -->
  <section class="py-16 bg-white dark:bg-gray-800 transition-colors">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">
            {homeContent.imageSection.title}
          </h2>
          <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-4">
            {homeContent.imageSection.text}
          </p>
          <a
            href="/sr/o-rasi"
            class="inline-block px-6 py-3 bg-primary-600 dark:bg-gray-600 text-white font-medium rounded-lg hover:bg-primary-700 dark:hover:bg-gray-500 transition-colors"
          >
            {homeContent.imageSection.button}
          </a>
        </div>
        <div class="rounded-lg overflow-hidden shadow-lg dark:shadow-gray-900/50">
          <div class="w-full h-80 bg-gradient-to-br from-primary-300 to-primary-500 dark:from-gray-700 dark:to-gray-800 flex items-center justify-center relative">
            <img
              src="/images/home-feature.jpg"
              alt="Segedinski Viskoleti golub"
              class="w-full h-full object-cover"
              onerror="this.style.display='none'; this.parentElement.querySelector('.placeholder-icon').style.display='flex';"
            />
            <div class="placeholder-icon absolute inset-0 flex items-center justify-center" style="display: none;">
              <svg class="w-32 h-32 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600 dark:bg-gray-700 text-white transition-colors">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        {homeContent.ctaSection.title}
      </h2>
      <p class="text-xl text-white/90 mb-8">
        {homeContent.ctaSection.text}
      </p>
      <a
        href="/sr/kontakt"
        class="inline-block px-8 py-3 bg-white dark:bg-gray-800 text-primary-600 dark:text-gray-100 font-bold rounded-lg hover:bg-gray-100 dark:hover:bg-gray-900 transition-colors"
      >
        {homeContent.ctaSection.button}
      </a>
    </div>
  </section>
</Layout>
