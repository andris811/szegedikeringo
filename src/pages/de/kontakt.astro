---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import { content } from '../../content.js';

const lang = 'de';
const contactContent = content[lang].contact;
---

<Layout
  title="Kontakt | Szegediner Hochflieger Zucht"
  description="Kontaktieren Sie den Szegediner Hochflieger ZÃ¼chter - Fragen, Beratung"
>
  <!-- Hero Section -->
  <Hero
    title={contactContent.title}
    subtitle={contactContent.subtitle}
    image="/images/hero/contact.jpg"
  />

  <!-- Intro Section -->
  <section class="py-12 bg-gradient-to-b from-primary-50 dark:from-gray-800 to-white dark:to-gray-900 transition-colors">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed">
        {contactContent.intro}
      </p>
    </div>
  </section>

  <!-- Contact Info & Form -->
  <section class="py-16 bg-white dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8">
              {contactContent.info.title}
            </h2>

            <div class="space-y-6">
              <div class="flex items-start space-x-4 p-4 bg-primary-50 dark:bg-gray-700 rounded-lg hover:bg-primary-100 dark:hover:bg-gray-600 transition-colors duration-300">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-primary-600 dark:bg-gray-600 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                </div>
                <div>
                  <p class="font-semibold text-gray-900 dark:text-gray-100 mb-1">{contactContent.info.name}</p>
                  <p class="text-gray-600 dark:text-gray-300">{contactContent.info.nameValue}</p>
                </div>
              </div>

              <div class="flex items-start space-x-4 p-4 bg-primary-50 dark:bg-gray-700 rounded-lg hover:bg-primary-100 dark:hover:bg-gray-600 transition-colors duration-300">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-primary-600 dark:bg-gray-600 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-gray-900 dark:text-gray-100 mb-1">{contactContent.info.phone}</p>
                  <button
                    id="reveal-phone"
                    class="text-primary-600 dark:text-gray-300 hover:text-primary-700 dark:hover:text-gray-200 font-medium flex items-center gap-2 group"
                    data-phone={contactContent.info.phoneRaw}
                    data-phone-display={contactContent.info.phoneValue}
                  >
                    <span>{contactContent.info.revealButton}</span>
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                </div>
              </div>

              <div class="flex items-start space-x-4 p-4 bg-primary-50 dark:bg-gray-700 rounded-lg hover:bg-primary-100 dark:hover:bg-gray-600 transition-colors duration-300">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-primary-600 dark:bg-gray-600 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-gray-900 dark:text-gray-100 mb-1">{contactContent.info.email}</p>
                  <button
                    id="reveal-email"
                    class="text-primary-600 dark:text-gray-300 hover:text-primary-700 dark:hover:text-gray-200 font-medium flex items-center gap-2 group"
                    data-email={contactContent.info.emailValue}
                  >
                    <span>{contactContent.info.revealButton}</span>
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                </div>
              </div>

              <div class="flex items-start space-x-4 p-4 bg-primary-50 dark:bg-gray-700 rounded-lg hover:bg-primary-100 dark:hover:bg-gray-600 transition-colors duration-300">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-primary-600 dark:bg-gray-600 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                </div>
                <div>
                  <p class="font-semibold text-gray-900 dark:text-gray-100 mb-1">{contactContent.info.location}</p>
                  <p class="text-gray-600 dark:text-gray-300">{contactContent.info.locationValue}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media Section -->
          <div class="pt-8 border-t border-gray-200 dark:border-gray-600">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">
              {contactContent.social.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6">
              {contactContent.social.description}
            </p>

            <div class="flex space-x-4">
              <!-- Facebook -->
              <a href="https://www.facebook.com/share/1BgL13xgXn/?mibextid=wwXIfr" target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center hover:bg-blue-700 hover:scale-110 transform transition-all duration-300 shadow-md hover:shadow-lg text-white" aria-label="Facebook">
                <i class="fab fa-facebook-f text-xl"></i>
              </a>

              <!-- Instagram -->
              <a href="https://www.instagram.com/andras.varga.104418?igsh=MWRkMHhwMHExZm9xZA==" target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-pink-600 rounded-full flex items-center justify-center hover:bg-pink-700 hover:scale-110 transform transition-all duration-300 shadow-md hover:shadow-lg text-white" aria-label="Instagram">
                <i class="fab fa-instagram text-xl"></i>
              </a>

              <!-- Viber -->
              <a href="viber://chat?number=+36303304567" class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center hover:bg-purple-700 hover:scale-110 transform transition-all duration-300 shadow-md hover:shadow-lg text-white" aria-label="Viber">
                <i class="fab fa-viber text-xl"></i>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-primary-50 dark:bg-gray-700 p-8 rounded-2xl shadow-lg">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8">
            {contactContent.form.title}
          </h2>

          <form id="contact-form" action="https://formspree.io/f/xjkdrnap" method="POST" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2">
                {contactContent.form.name}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                placeholder={contactContent.form.namePlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white dark:bg-gray-800 transition-all duration-300"
                required
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2">
                {contactContent.form.email}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder={contactContent.form.emailPlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white dark:bg-gray-800 transition-all duration-300"
                required
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2">
                {contactContent.form.subject}
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                placeholder={contactContent.form.subjectPlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white dark:bg-gray-800 transition-all duration-300"
                required
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2">
                {contactContent.form.message}
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                placeholder={contactContent.form.messagePlaceholder}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white dark:bg-gray-800 resize-none transition-all duration-300"
                required
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-primary-600 dark:bg-gray-600 text-white py-3.5 px-6 rounded-lg font-semibold hover:bg-primary-700 dark:hover:bg-gray-500 transform hover:scale-105 transition-all duration-300 shadow-md hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed"
            >
              {contactContent.form.submit}
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Contact reveal functionality
  document.addEventListener('DOMContentLoaded', () => {
    // Phone reveal
    const phoneBtn = document.getElementById('reveal-phone');
    if (phoneBtn) {
      phoneBtn.addEventListener('click', () => {
        const phone = phoneBtn.dataset.phone || '';
        const phoneDisplay = phoneBtn.dataset.phoneDisplay || phone;
        if (phone) {
          const link = document.createElement('a');
          link.href = `tel:${phone}`;
          link.className = 'text-gray-600 dark:text-gray-200 hover:text-primary-600 dark:hover:text-gray-100 transition-colors font-medium';
          link.textContent = phoneDisplay;
          phoneBtn.replaceWith(link);
        }
      });
    }

    // Email reveal
    const emailBtn = document.getElementById('reveal-email');
    if (emailBtn) {
      emailBtn.addEventListener('click', () => {
        const email = emailBtn.dataset.email || '';
        if (email) {
          const link = document.createElement('a');
          link.href = `mailto:${email}`;
          link.className = 'text-gray-600 dark:text-gray-200 hover:text-primary-600 dark:hover:text-gray-100 transition-colors font-medium';
          link.textContent = email;
          emailBtn.replaceWith(link);
        }
      });
    }
  });
</script>
