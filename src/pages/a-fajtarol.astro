---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import { content } from '../content.js';

const lang = 'hu';
const breedContent = content[lang].breed;
---

<Layout
  title="A Fajtáról | Szegedi Magasszálló Keringő"
  description="Ismerje meg a Szegedi Magasszálló Keringő galamb fajta történetét, jellemzőit és különlegességeit."
>
  <!-- Hero Section -->
  <Hero
    title={breedContent.title}
    subtitle={breedContent.subtitle}
    image="/images/hero/breed.jpg"
  />

  <!-- Intro Section -->
  <section class="py-16 bg-white dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed text-center">
        {breedContent.intro}
      </p>
    </div>
  </section>

  <!-- History Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8">
        {breedContent.history.title}
      </h2>
      <p class="text-lg text-gray-700 dark:text-gray-200 leading-relaxed">
        {breedContent.history.text}
      </p>
    </div>
  </section>

  <!-- Characteristics Section -->
  <section class="py-16 bg-white dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-12 text-center">
        {breedContent.characteristics.title}
      </h2>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Appearance -->
        <div class="bg-gray-50 dark:bg-gray-900 p-8 rounded-lg">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
            {breedContent.characteristics.appearance.title}
          </h3>
          <ul class="space-y-3">
            {breedContent.characteristics.appearance.points.map((point) => (
              <li class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-primary-600 dark:text-gray-300 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-700 dark:text-gray-200">{point}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Flying Style -->
        <div class="bg-primary-50 dark:bg-gray-700 p-8 rounded-lg">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
            {breedContent.characteristics.flying.title}
          </h3>
          <p class="text-gray-700 dark:text-gray-200 leading-relaxed">
            {breedContent.characteristics.flying.text}
          </p>
        </div>

        <!-- Temperament -->
        <div class="bg-primary-50 dark:bg-gray-700 p-8 rounded-lg lg:col-span-2">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
            {breedContent.characteristics.temperament.title}
          </h3>
          <p class="text-gray-700 dark:text-gray-200 leading-relaxed">
            {breedContent.characteristics.temperament.text}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Breeding Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center">
        {breedContent.breeding.title}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {breedContent.breeding.points.map((point, index) => (
          <div class="flex items-start space-x-4 bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm">
            <div class="flex-shrink-0 w-8 h-8 bg-primary-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
              <span class="text-primary-600 dark:text-gray-300 font-bold">{index + 1}</span>
            </div>
            <p class="text-gray-700 dark:text-gray-200">{point}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Standard Section -->
  <section class="py-16 bg-white dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center">
        {breedContent.standard.title}
      </h2>
      <p class="text-lg text-gray-700 dark:text-gray-200 leading-relaxed">
        {breedContent.standard.text}
      </p>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600 dark:bg-gray-700 text-white transition-colors">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">
        {breedContent.ctaSection.title}
      </h2>
      <p class="text-xl text-white/90 mb-8">
        {breedContent.ctaSection.text}
      </p>
      <a
        href="/galeria"
        class="inline-block px-8 py-3 bg-white dark:bg-gray-800 text-primary-600 dark:text-gray-100 font-bold rounded-lg hover:bg-gray-100 dark:hover:bg-gray-900 transition-colors"
      >
        {breedContent.ctaSection.button}
      </a>
    </div>
  </section>
</Layout>
