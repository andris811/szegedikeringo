---
// Logo using the image from public folder
const { pathname } = Astro.url;
const isEnglish = pathname.startsWith('/en');
const isSerbian = pathname.startsWith('/sr');
const homeUrl = isSerbian ? '/sr/' : (isEnglish ? '/en/' : '/');
const logoAlt = isSerbian ? 'Segedinski Viskoleti Logo' : (isEnglish ? 'Szegedin Highflyer Logo' : 'Szegedi Magasszálló Keringő Logo');
const logoText = isSerbian ? 'Segedinski Viskoleti' : (isEnglish ? 'Szegedin Highflyer' : 'Szegedi Magasszálló Keringő');
---

<a href={homeUrl} class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
  <img
    src="/logo.png"
    alt={logoAlt}
    class="h-20 w-auto"
  />
  <span class="font-serif text-xl font-bold text-gray-800 dark:text-gray-100 hidden lg:block">
    {logoText}
  </span>
</a>
