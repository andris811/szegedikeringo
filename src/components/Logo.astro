// Simple pigeon logo SVG
---

<a href="/" class="flex items-center space-x-2 text-gray-800 hover:text-primary-600 transition-colors">
  <svg
    class="w-10 h-10"
    viewBox="0 0 100 100"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Pigeon body -->
    <ellipse cx="50" cy="55" rx="25" ry="20" fill="currentColor" opacity="0.8"/>

    <!-- Pigeon head -->
    <circle cx="65" cy="40" r="12" fill="currentColor"/>

    <!-- Wing -->
    <path
      d="M 30 50 Q 20 45, 15 50 Q 20 55, 30 60 Z"
      fill="currentColor"
      opacity="0.6"
    />

    <!-- Tail -->
    <path
      d="M 28 60 Q 20 65, 22 72 L 30 68 Z"
      fill="currentColor"
      opacity="0.7"
    />

    <!-- Eye -->
    <circle cx="70" cy="38" r="2" fill="white"/>

    <!-- Beak -->
    <path
      d="M 75 40 L 80 39 L 75 42 Z"
      fill="#FFA500"
    />

    <!-- Feet -->
    <line x1="45" y1="72" x2="45" y2="78" stroke="currentColor" stroke-width="2"/>
    <line x1="55" y1="72" x2="55" y2="78" stroke="currentColor" stroke-width="2"/>
  </svg>

  <span class="font-serif text-xl font-bold hidden sm:block">
    Szegedi Kering≈ë
  </span>
</a>
