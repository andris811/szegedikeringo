---
interface Props {
  title: string;
  subtitle?: string;
  image?: string;
  overlay?: boolean;
}

const { title, subtitle, image = "/images/hero-placeholder.jpg", overlay = true } = Astro.props;
---

<section class="relative h-[500px] md:h-[600px] flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img
      src={image}
      alt="Hero background"
      class="w-full h-full object-cover"
      onerror="this.style.display='none'; this.parentElement.querySelector('.fallback-bg').classList.remove('hidden');"
    />
    <!-- Fallback gradient background -->
    <div class="fallback-bg hidden absolute inset-0 bg-gradient-to-r from-primary-600 to-primary-800">
      <!-- Placeholder background pattern -->
      <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
              <circle cx="20" cy="20" r="1" fill="white" />
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid)" />
        </svg>
      </div>
    </div>
  </div>

  <!-- Overlay -->
  {overlay && (
    <div class="absolute inset-0 bg-black/40 dark:bg-black/60"></div>
  )}

  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 drop-shadow-lg">
      {title}
    </h1>

    {subtitle && (
      <p class="text-xl md:text-2xl text-white/90 font-light drop-shadow-md">
        {subtitle}
      </p>
    )}

    <!-- Decorative element -->
    <div class="mt-8 flex justify-center">
      <div class="w-24 h-1 bg-white/50 rounded-full"></div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
